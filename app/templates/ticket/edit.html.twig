{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Editier le ticket: {{ ticket.id }}{% endblock %}

{% block body %}
    <h1>Editier le ticket: {{ ticket.id }}</h1>

    <div>
        <a href="{{ path('app_welcome') }}" class="btn btn-light btn-sm">
            <i class="fas fa-back"></i>
        </a>
        <a href="{{ path('ticket_show', {id: ticket.id}) }}" class="btn btn-info btn-sm">
            <i class="fas fa-eye"></i>
        </a>
        <a href="{{ path('ticket_delete', {id: ticket.id}) }}" class="btn btn-danger btn-sm">
            <i class="fas fa-trash"></i>
        </a>
    </div>

    <div>
        {{ form(form) }}
    </div>

    <div class="d-flex justify-content-start">
        <a href="{{ path('app_welcome') }}" class="btn btn-light">
            Retour
        </a>
    </div>
{% endblock %}
